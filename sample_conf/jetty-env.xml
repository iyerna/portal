<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.mortbay.jetty.webapp.WebAppContext">
	<New id="CustomerPortalDataSource" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>jdbc/CustomerPortalDS</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<Set name="driverClassName">com.mysql.jdbc.Driver</Set>
				<Set name="url">jdbc:mysql://localhost:3306/customer_portal?autoReconnect=true</Set>
				<Set name="username">root</Set>
				<Set name="password">admin</Set>
			</New>
		</Arg>
	</New>
</Configure>
